  pod 'React', path: '../node_modules/react-native', subspecs: <%= (%w[Core CxxBridge] + test_target(:tvos).subspecs_from_libraries).inspect %>
  pod 'yoga', path: '../node_modules/react-native/ReactCommon/yoga'
