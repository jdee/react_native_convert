platform :ios, '<%= app_target.deployment_target %>'

target '<%= app_name %>' do
  pod 'React',
    path: '../node_modules/react-native',
    subspecs: %w[
      Core
      CxxBridge
      DevSupport
      <%= @subspecs_from_libraries.join("\n      ") %>
    ]
  pod 'yoga', path: '../node_modules/react-native/ReactCommon/yoga'
  pod 'Folly', podspec: '../node_modules/react-native/third-party-podspecs/Folly.podspec'

  # --- react-native link adds pods below this line. ---

end

<% if test_target %>
target '<%= test_target.name %>' do
  pod 'React', path: '../node_modules/react-native', subspecs: %w[Core CxxBridge]
  pod 'yoga', path: '../node_modules/react-native/ReactCommon/yoga'
  pod 'Folly', podspec: '../node_modules/react-native/third-party-podspecs/Folly.podspec'
end
<% end %>
